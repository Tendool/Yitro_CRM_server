{
  "name": "fusion-starter",
  "private": true,
  "type": "module",
  "pkg": {
    "assets": [
      "dist/spa/*"
    ],
    "scripts": [
      "dist/server/**/*.js"
    ]
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "npx tsx watch server/index.ts",
    "dev:api": "npx tsx dev-server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "start:dev": "npm run dev:full",
    "start dev": "npm run dev:full",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "vite build --config vite.config.server.ts",
    "start": "node start.js",
    "start:production": "NODE_ENV=production node start.js",
    "deploy": "bash deploy.sh",
    "setup:server": "bash setup-server.sh",
    "init:db": "bash init-db.sh",
    "test": "npx vitest --run",
    "test:watch": "npx vitest",
    "test-config": "npx tsx server/scripts/test-config.ts",
    "format.fix": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc",
    "typecheck:server": "tsc --project server/tsconfig.json",
    "migrate": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "db:seed": "npx tsx server/db/setup-test-accounts.ts",
    "db:clear": "npx tsx server/scripts/clear-database.ts"
  },
  "dependencies": {
  "esbuild": "^0.25.9",
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/client": "^6.15.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cache": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "prisma": "^6.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7",
    "zod": "^3.23.8"
  },

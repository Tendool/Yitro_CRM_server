# Production Environment Configuration
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration (SQLite)
DATABASE_URL="file:./database.db"

# JWT Secret (Generate a secure random string, minimum 64 characters)
JWT_SECRET="your-super-secure-jwt-secret-key-here-minimum-64-characters-long-please"

# Email Configuration (Optional - for password reset functionality)
EMAIL_USER="your-email@domain.com"
EMAIL_PASS="your-email-password"

# Frontend URL (Used for CORS and email links)
FRONTEND_URL="http://crm.yitroglobal.com"